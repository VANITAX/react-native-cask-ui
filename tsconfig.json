{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@react-native-cask-ui/*": ["./packages/*/src"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "noEmit": true,
  }
}